{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Default",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "sourceMaps": true
    },
    {
      "name": "Launch Chrome - Filter Sentence Example",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/examples/filter-sentence",
      "sourceMaps": true,
      "resolveSourceMapLocations": null,
      "sourceMapPathOverrides": {
        "../../packages/*/src/*": "${workspaceFolder}/packages/*/src/*",
        "../packages/*/src/*": "${workspaceFolder}/packages/*/src/*",
        "packages/*/src/*": "${workspaceFolder}/packages/*/src/*",
        "@smart-input/*/src/*": "${workspaceFolder}/packages/*/src/*"
      },
      "preLaunchTask": "npm: example:filter"
    },
    {
      "name": "Launch Chrome - Ladle",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:61000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "preLaunchTask": "npm: ladle"
    },
    {
      "name": "Launch Edge - Chat Example",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/examples/chat-input",
      "sourceMaps": true,
      "preLaunchTask": "npm: example:chat"
    },
    {
      "name": "Debug Vitest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test", "--run", "--no-coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Current Test File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["vitest", "run", "${relativeFile}", "--no-coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug E2E Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@smart-input/test", "test:e2e:debug"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    }
  ]
}
