{
  // Editor settings
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.insertSpaces": true,

  // TypeScript settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // File associations
  "files.associations": {
    "*.css": "css",
    "*.less": "less"
  },

  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/ladle-build": true,
    "pnpm-lock.yaml": true
  },

  // File watcher exclusions
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/ladle-build/**": true
  },

  // Vitest settings
  "vitest.enable": true,
  "vitest.commandLine": "pnpm test",

  // Prettier settings
  "prettier.requireConfig": true,

  // ESLint settings
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Explorer settings
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.test.ts, ${capture}.spec.ts",
    "*.tsx": "${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.stories.tsx, ${capture}.module.less",
    "package.json": "pnpm-lock.yaml, pnpm-workspace.yaml, .npmrc, turbo.json, tsconfig*.json",
    "vite.config.*": "vitest.config.*",
    "README.md": "CHANGELOG.md, CONTRIBUTING.md, LICENSE, IMPROVEMENTS.md"
  }
}
